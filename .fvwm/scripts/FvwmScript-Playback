WindowTitle {FvwmScript-Playback}
WindowSize 16 16
WindowPosition 0 0
Colorset 10

Init
Begin
    ChangeIcon 1 media-eject-fade.svg:16x16
End


PeriodicTasks
Begin
    If (RemainderOfDiv (GetTime) 3)==0 Then
    Begin

    Set $stopped = (GetOutput {mpc | grep -c " "} 1 -1)
    Set $status = (GetOutput {mpc | grep -c -o paused} 1 -1)
    
    If $stopped == 1 Then
        ChangeIcon 1 media-eject-fade.svg:16x16
    If $stopped == 3 Then
        Begin
	    If $status == 1 Then
	        ChangeIcon 1 media-playback-pause.svg:16x16
	    If $status == 0 Then
	        ChangeIcon 1 media-playback-play.svg:16x16
        End
    End
End
    
    
Widget 1
Property
    Size	16 16
    Position	0 0
    Type	ItemDraw
    Icon	media-eject-fade.svg:16x16
    Flags Left
    Main
        Case message of
        PauseBump:
            Begin
#		If $stopped == 1 Then
#		    Do {Menu FvwmMenuMPD Rectangle +$left+$top 0 -100m}
		If $stopped == 3 Then
                    Do {exec mpc toggle}
            End
	MenuBump:
	    Begin
		Do {Menu FvwmMenuMPD}
	    End

    End
